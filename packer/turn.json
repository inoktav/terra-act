{
  "builders": [
    {
      "communicator": "ssh",
      "source_path": "bento/ubuntu-18.04",
      "provider": "virtualbox",
      "type": "vagrant",
      "output_dir": "output-vagrant-turn"
    },
    {
      "region": "{{user `aws_region`}}",
      "type": "amazon-ebs",
      "ami_name": "packer-turn-ami-{{timestamp}}",
      "instance_type": "t3.micro",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "virtualization-type": "hvm",
          "root-device-type": "ebs"
        },
        "owners": "099720109477",
        "most_recent": true
      },
      "ssh_username": "ubuntu",
      "ssh_interface": "public_dns",
      "ssh_keypair_name": "Tesseract",
      "ssh_agent_auth": true
    }
  ],
  "variables": {
    "aws_region": "ap-south-1"
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbooks/turn.yml"
    }
  ]
}
